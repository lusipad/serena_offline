# EditorConfig is helpful for maintaining consistent coding styles for multiple developers working on the same project across various editors and IDEs.
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{json,yml,yaml}]
indent_size = 2

[*.{bat,cmd,ps1}]
end_of_line = crlf
